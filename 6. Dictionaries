6.1: Person.
cassie = {"first" : "Han", "last" : "Le",
          "age" : "17", "city" : "Da Nang"}

print(f"Welcome {cassie['first']} {cassie['last']}.")
print(f"You are {cassie['age']}. You currently live in {caissie['city']}.")

6.2: Favorite Numbers.
friends_fav_num = {"Jul" : "7", "Timmy" : "5",
                   "Cassie" : "29", "Elijah" : "13"}

friends = ["Jul", "Timmy", "Cassie", "Elijah", "Koneda"]

for friends in friends_fav_num:
    print(f"{friends}'s favorite number is {friends_fav_num[friends]}")

6.3: Glossary.
terms = [".append", ".title", "sorted()", ".upper()", "lower()"]

glossary = {".append" : "Add an item into a list.",
            ".title" : "Capitalize the first letter of a word.",
            "sorted()" : "Put the list in aphabetical order.",
            ".upper()" : "Uppercase the whole word.",
            ".lower()" : "Lowercase the whole word."}

for terms in glossary:
    print(f"{terms}:")
    print(f"\t{glossary[terms]}\n")
    
6.4: Glossary 2.
glossary = {".append" : "Add an item into a list.",
            ".title" : "Capitalize the first letter of a word.",
            "sorted()" : "Put the list in aphabetical order.",
            ".upper()" : "Uppercase the whole word.",
            ".lower()" : "Lowercase the whole word."}

for key, value in glossary.items():
    print(f"{key}:")
    print(f"\t{value}\n")
    
6.5: Rivers.
rivers = {"Nile" : "Egypt", 
          "Jordan" : "Israel",
          "Mississipi" : "United States"}

for river, country in rivers.items():
    print(f"{river} river is in {country}!")

6.6: Polling.
favorite_language = {"Jul" : "Python", 
                     "Michael" : "Kotlin",
                     "Elaine" : "Python"}

people = ["Gary", "Quat", "Michael"]

for person in people:
    if person in favorite_language.keys():
        print(f"Thank you {person} for responding.")
    else:
        print(f"Hi {person}, please take the poll!")

6.7: People
people = {
        "cassie" : {
                "first" : "Han",
                "last" : "Le",
                "birthday" : "29 April 2003",
                "hometown" : "Da Nang"
                },
        "jul" : {
                "first" : "Quan",
                "last" : "Vu",
                "birthday" : "31 July 2002",
                "hometown" : "Hanoi"
                }
        }

for username, user_info in people.items():
    print(f"\nYour username is {username.upper()}")
    full_name = f"{user_info['first']} {user_info['last']}"
    birthday = f"{user_info['birthday']}"
    hometown = f"{user_info['hometown']}"
    print(f"\tHello hello {full_name}")
    print(f"\tYour birthday is on {birthday}")
    print(f"\tYour hometown is {hometown}")


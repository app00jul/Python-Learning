6.1: Person.
jul = {"first" : "Julian", "last" : "Noeske",
          "age" : "18", "city" : "Milwaukee"}

print(f"Welcome {cassie['jul']} {jul['last']}.")
print(f"You are {jul['age']}. You currently live in {jul['city']}.")

6.2: Favorite Numbers.
friends_fav_num = {"Jul" : "7", "Timmy" : "5",
                   "Cassie" : "29", "Elijah" : "13"}

friends = ["Jul", "Timmy", "Cassie", "Elijah"]

for friends in friends_fav_num:
    print(f"{friends}'s favorite number is {friends_fav_num[friends]}")

6.3: Glossary.
terms = [".append", ".title", "sorted()", ".upper()", "lower()"]

glossary = {".append" : "Add an item into a list.",
            ".title" : "Capitalize the first letter of a word.",
            "sorted()" : "Put the list in aphabetical order.",
            ".upper()" : "Uppercase the whole word.",
            ".lower()" : "Lowercase the whole word."}

for terms in glossary:
    print(f"{terms}:")
    print(f"\t{glossary[terms]}\n")
    
6.4: Glossary 2.
glossary = {".append" : "Add an item into a list.",
            ".title" : "Capitalize the first letter of a word.",
            "sorted()" : "Put the list in aphabetical order.",
            ".upper()" : "Uppercase the whole word.",
            ".lower()" : "Lowercase the whole word."}

for key, value in glossary.items():
    print(f"{key}:")
    print(f"\t{value}\n")
    
6.5: Rivers.
rivers = {"Nile" : "Egypt", 
          "Jordan" : "Israel",
          "Mississipi" : "United States"}

for river, country in rivers.items():
    print(f"{river} river is in {country}!")

6.6: Polling.
favorite_language = {"Jul" : "Python", 
                     "Michael" : "Kotlin",
                     "Elaine" : "Python"}

people = ["Gary", "Quat", "Michael"]

for person in people:
    if person in favorite_language.keys():
        print(f"Thank you {person} for responding.")
    else:
        print(f"Hi {person}, please take the poll!")

6.7: People
people = {
        "cassie" : {
                "first" : "Han",
                "last" : "Le",
                "birthday" : "29 April 2003",
                "hometown" : "Da Nang"
                },
        "jul" : {
                "first" : "Quan",
                "last" : "Vu",
                "birthday" : "31 July 2002",
                "hometown" : "Hanoi"
                }
        }

for username, user_info in people.items():
    print(f"\nYour username is {username.upper()}")
    full_name = f"{user_info['first']} {user_info['last']}"
    birthday = f"{user_info['birthday']}"
    hometown = f"{user_info['hometown']}"
    print(f"\tHello hello {full_name}")
    print(f"\tYour birthday is on {birthday}")
    print(f"\tYour hometown is {hometown}")

6.8: Pets.
ted = {"name" : "ted", 
       "type" : "cat", 
       "owner" : "Jul", 
       "gender" : "female"}

kida = {"name" : "kida", 
        "type" : "dog", 
        "owner" : "the Noeske", 
        "gender" : "female"}

echo = {"name" : "echo", 
        "type" : "cat", 
        "owner" : "Kate", 
        "gender" : "male"}

pets = [ted, kida, echo]

for pet in pets:
    print(f"\n{pet['name'].title()} is a {pet['type']}")
    if pet["gender"] == "male":
        print(f"His owner is {pet['owner']}")
    else:
        print(f"Her owner is {pet['owner']}")

6.9: Favorite Places.
favorite_places = {
        "Jul" : "Moraine Lake",
        "Thao" : "Toronto",
        "Han" : "Da Nang"
        }

for person, place in favorite_places.items():
    print(f"{person.title()}'s favorite place is {place.title()}.")

6.10: Favorite Numbers.
friends_fav_num = {"Jul" : [7, 256], "Timmy" : [5, 11],
                   "Cassie" : [29, 4], "Elijah" : [13, 19]}

for friend, numbers in friends_fav_num.items():
    print(f"\n{friend}'s favorite numbers are:")
    for number in numbers:
        print(f"\t{number}")

6.11: Cities.
cities = {
        "Milwaukee" : {
                "Location" : "Untied States of America",
                "Population" : "594,548",
                "Mayor" : "Tom Barrett"
            },
        "Kyoto" : {
                "Location" : "Japan",
                "Population" : "1.475 million",
                "Mayor" : "Daisaku Kadokawa"
            },
        "Auckland" : {
                "Location" : "New Zealand",
                "Population" : "1.657 million",
                "Mayor" : "Phil Goff"}
        }
        
for city, info in cities.items():
    print(f"\n{city.upper()}")
    print(f"\t{city.title()} is located in {info['Location']}.")
    print(f"\t{city.title()} has a population of {info['Population']}.")
    print(f"\t{city.title()}'s mayor is {info['Mayor']}.")

